<div class="mt-4">
    <h1 style="margin-bottom: 50px; text-align: center;">
        Các giống cây trồng nông nghiệp
    </h1>

    <div class="row">
        {{#each crop}}
        <div class="col-sm-6 col-lg-4">
            <div class="card card-crops-item shadow d-inline-block">
                <a href="/seed/{{this.slug}}" class="card-img-wrap">
                    <img src={{this.image}} class="card-img-top" alt="...">
                </a>
                <div class="card-body">
                    <h5 class="card-title des-crops">{{this.type}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <a href="/seed/{{this.slug}}" class="btn btn-success position-absolute bottom-0 start-10"
                        id="nutbam">Xem chi tiết</a>
                </div>
            </div>

        </div>
        {{/each}}
    </div>
</div>