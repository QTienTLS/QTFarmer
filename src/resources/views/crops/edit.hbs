<div class="mt-4">
    <h1 style="margin-bottom: 50px; text-align: center;">
        Chỉnh sửa chủng loại
    </h1>
    <form method="POST" action="/crops/{{crop._id}}?_method=PUT">
        <div class="form-group">
            <label for="type" class="form-label">Loại cây trồng</label>
            <input type="text" class="form-control" id="type" name="type" value="{{crop.type}}">
            <div id="emailHelp" class="form-text">Nhập vào loại cây trồng muốn thêm.</div>
        </div>
        <div class="form-group">
            <label for="image" class="form-label">Hình ảnh mô tả</label>
            <input type="text" class="form-control" id="image" name="image" value="{{crop.image}}">
            <div id="emailHelp" class="form-text">Điền vào đường dẫn tới hình ảnh: img/ten-anh.jpg</div>
        </div>
        <div class="form-group">
            <label for="description" class="form-label">Description</label>
            <input type="text" class="form-control" id="description" name="description" value="{{crop.description}}">
            <div id="emailHelp" class="form-text">Mô tả sơ lược về loại cây.</div>
        </div>

        {{!-- <button type="submit" class="btn btn-primary">Submit</button> --}}
        <button type="submit" class="btn btn-success btn-lg">Lưu lại</button>
    </form>
</div>